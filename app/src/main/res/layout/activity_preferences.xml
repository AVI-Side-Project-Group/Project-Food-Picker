<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtvw_foodtype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/prefs_txtvw_food_type"
        android:textSize="@dimen/font_size_pref_main"
        app:layout_constraintEnd_toStartOf="@+id/vertical50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal5" />

    <EditText
        android:id="@+id/edtxt_foodtype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/prefs_edtxt_food_type_hint"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtvw_foodtype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical50" />


    <TextView
        android:id="@+id/txtvw_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/prefs_txtvw_rating"
        android:textSize="@dimen/font_size_pref_main"
        app:layout_constraintEnd_toEndOf="@+id/txtvw_foodtype"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtvw_foodtype"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_foodtype" />

    <SeekBar
        android:id="@+id/sbr_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="5"
        app:layout_constraintEnd_toEndOf="@+id/edtxt_foodtype"
        app:layout_constraintStart_toStartOf="@+id/edtxt_foodtype"
        app:layout_constraintTop_toTopOf="@+id/txtvw_rating" />

    <TextView
        android:id="@+id/txtvw_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/prefs_txtvw_distance"
        android:textSize="@dimen/font_size_pref_main"
        app:layout_constraintEnd_toEndOf="@+id/txtvw_pricing"
        app:layout_constraintStart_toStartOf="@+id/txtvw_pricing"
        app:layout_constraintTop_toBottomOf="@+id/sbr_rating" />

    <SeekBar
        android:id="@+id/sbr_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="20"
        app:layout_constraintEnd_toEndOf="@+id/sbr_rating"
        app:layout_constraintStart_toStartOf="@+id/sbr_rating"
        app:layout_constraintTop_toTopOf="@+id/txtvw_distance" />

    <TextView
        android:id="@+id/txtvw_pricing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/prefs_txtvw_pricing"
        android:textSize="@dimen/font_size_pref_main"
        app:layout_constraintEnd_toEndOf="@+id/txtvw_rating"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtvw_rating"
        app:layout_constraintTop_toBottomOf="@+id/sbr_distance" />

    <RadioGroup
        android:id="@+id/rdgroup_pricing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/sbr_distance"
        app:layout_constraintStart_toStartOf="@+id/sbr_distance"
        app:layout_constraintTop_toTopOf="@+id/txtvw_pricing">

        <RadioButton
            android:id="@+id/rdbtn_pricinglvl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prefs_rdbtn_pricinglv1" />

        <RadioButton
            android:id="@+id/rdbtn_pricinglvl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prefs_rdbtn_pricinglv2" />

        <RadioButton
            android:id="@+id/rdbtn_pricinglvl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prefs_rdbtn_pricinglv3" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_search"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/prefs_btn_search"
        app:layout_constraintEnd_toEndOf="@+id/sbr_distance"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtvw_distance"
        app:layout_constraintTop_toBottomOf="@+id/rdgroup_pricing" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.38" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>